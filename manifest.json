{
  "name": "no-ai",
  "description": "filter out AI summaries and restrict LLMs",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon-48.png"
  },
  "icons": {
    {
      "src": "images/icon-lr.webp",
      "sizes": "48x48",
      "type": "image/webp"
    },
    {
      "src": "images/icon-ico.ico",
      "sizes": "72x72 96x96 128x128 256x256"
    },
    {
      "src": "images/icon-svg.svg",
      "sizes": "any"
    }
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": [
        "resources/block-page.html",
        "resources/confirmation-overlay.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
